<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/book_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Name"
            android:id="@+id/nameOfBook_rv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/container_stroke">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author:"
            android:id="@+id/static_author_name_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTHOR_NAME"
            android:id="@+id/author_books_rv"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-thin"
            android:layout_alignTop="@+id/static_author_name_text"
            android:layout_toEndOf="@+id/static_author_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publisher:"
            android:id="@+id/static_publisher_text"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUBLISHER_NAME"
            android:id="@+id/publisher_rv"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/static_publisher_text"
            android:layout_toEndOf="@+id/static_publisher_text"
            android:fontFamily="sans-serif-thin"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/container_stroke">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pages:"
            android:id="@+id/static_pages_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAGES_OF_BOOK"
            android:id="@+id/pages_quantity_rv"
            android:layout_alignBottom="@+id/static_pages_text"
            android:layout_toEndOf="@+id/static_pages_text"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/primaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country of publishing:"
            android:id="@+id/static_country_text"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:fontFamily="sans-serif-condensed"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/static_pages_text"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUNTRY"
            android:id="@+id/country_books_rv"
            android:layout_alignBottom="@+id/static_country_text"
            android:layout_toEndOf="@+id/static_country_text"
            android:textColor="@color/primaryText"
            android:textSize="20sp"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>
</LinearLayout>