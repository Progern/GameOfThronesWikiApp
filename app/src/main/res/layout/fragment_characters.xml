<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="progernapplications.gameofthroneswikiapp.CharactersFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/charSearchField"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Type the name of character here"
            android:drawableLeft="@drawable/search_little"
            android:drawablePadding="5dp"
            android:background="@drawable/rectangle_search"
            android:layout_marginTop="25dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/charsRecView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"></android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/buttonImage"
            android:layout_below="@+id/charSearchField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/targ"/>

    </RelativeLayout>
</FrameLayout>
